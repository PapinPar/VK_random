<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TestActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <Button
            android:id="@+id/users_get"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Get user"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"/>
        <Button
            android:id="@+id/friends_get"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="get friend"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"/>
        <Button
            android:id="@+id/messages_get"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="get massage"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"/>
        <Button
            android:id="@+id/dialogs_get"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="get diaolg"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"/>



        <Button
            android:id="@+id/wall_post"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="wall post"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"/>


        <Button
            android:id="@+id/test_validation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Validation"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"/>
    </LinearLayout>
</ScrollView>
